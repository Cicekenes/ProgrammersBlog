@model UserPasswordChangeDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Şifre Değiştir";
}

<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <div class="card mt-3">
            <div class="card-header">
                <h4 class="text-center"><span class="fas fa-key mx-1"></span>Şifre Değiştir</h4>
                <div class="card-body">
                    <form asp-action="PasswordChange" asp-controller="User" method="post">
                        <div asp-validation-summary="All" class="text-danger" id="validation-summary"></div>
                        <div class="form-group">
                            <label asp-for="CurrentPassword"></label>
                            <input type="password" class="form-control" asp-for="CurrentPassword" placeholder="Lütfen, şuanki şifrenizi giriniz." />
                            <span class="text-danger" asp-validation-for="CurrentPassword"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NewPassword"></label>
                            <input type="password" class="form-control" asp-for="NewPassword" placeholder="Lütfen, yeni şifrenizi giriniz." />
                            <span class="text-danger" asp-validation-for="NewPassword"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="RepeatPassword"></label>
                            <input type="password" class="form-control" asp-for="RepeatPassword" placeholder="Lütfen, yeni şifre tekrarı giriniz." />
                            <span class="text-danger" asp-validation-for="RepeatPassword"></span>
                        </div>
                       
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block"><span class="fas fa-save mx-2"></span>Şifre Değiştir</button>
                            <a class="btn btn-danger btn-block" asp-area="Admin" asp-controller="Home" asp-action="Index"><span class="fas fa-times mx-2"></span>İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>